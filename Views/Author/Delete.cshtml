@model LibrarySystem.Models.Author
@{
    ViewData["Title"] = "Delete Author";
}


<h1 class="text-info">Enter Author Details:</h1>

<div class="container center_div">
    <div class="row">
        <div class="col-md-6">
            <form id="AuthorDeleteForm" method="post" asp-action="DeletePost" autocomplete="off">
                <input asp-for="AuthorId" hidden />
                <div class="form-group form-row">
                    <label asp-for="AuthorName"></label>
                    <input type="text" class="form-control" asp-for="AuthorName" disabled />
                </div>
                <div class="form-group form-row">
                    <label asp-for="PhoneNumber"></label>
                    <input type="number" class="form-control" asp-for="PhoneNumber" maxlength="10" disabled />
                </div>
                <div class="form-group form-row">
                    <label asp-for="Email"></label>
                    <input type="text" class="form-control" asp-for="Email" disabled />
                </div>
                <div class="form-group form-row">
                    <label asp-for="AuthorExpertise"></label>
                    <input type="text" class="form-control" asp-for="AuthorExpertise" disabled />
                </div>
                <div class="form-group form-row">
                    <label asp-for="AuthorCountry"></label>
                    <input type="text" class="form-control" asp-for="AuthorCountry" disabled />
                </div>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
            </form>
            <div class="form-group form-row">
                <div class="col-6">
                    <button class="btn deleteConfirmation btn-danger w-75">Delete</button>
                </div>
                <div class="col-6">
                    <a class="nav-link text-white w-75 btn btn-success" asp-area="" asp-controller="Author" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/AuthorJs/Author.js"></script>
}
