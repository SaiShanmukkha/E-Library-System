@model IEnumerable<LibrarySystem.Models.Author>


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Authors List:</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Add New Author</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-secondary table-striped">
            <thead>
                <tr>
                    <th>
                        Author Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td width="25%">@author.AuthorName</td>
                        <td width="25%">@author.Email</td>
                        <td width="25%">@author.PhoneNumber</td>
                        <td width="25%">
                            <div class="text-center btn-group w-100">
                                <a class="btn btn-primary mx-1 text-white" asp-controller="Author" asp-action="Update" asp-route-Id="@author.AuthorId">Update</a>
                                <a class="btn btn-danger mx-1 text-white" asp-controller="Author" asp-action="Delete" asp-route-Id="@author.AuthorId">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No Authors</p>
    }
</div>