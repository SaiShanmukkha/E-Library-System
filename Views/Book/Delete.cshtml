@model LibrarySystem.Models.Book


<h1>Enter Book Details:</h1>

<div class="container center_div">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="DeletePost" autocomplete="off">

                <input type="text" class="form-control" asp-for="isAvailable" style="display:none" disabled/>
                <input asp-for="BookId" hidden />
                <div class="form-group form-row">
                    <label asp-for="BookName"></label>
                    <input type="text" class="form-control" asp-for="BookName" disabled />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookEdition"></label>
                    <input type="number" class="form-control" asp-for="BookEdition" min="1" disabled />
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookYear"></label>
                    <input type="number" class="form-control" asp-for="BookYear" disabled />
                    <span asp-validation-for="BookYear" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookPublisher"></label>
                    <input type="text" class="form-control" asp-for="BookPublisher" disabled />
                    <span asp-validation-for="BookPublisher" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookLanguage"></label>
                    <input type="text" class="form-control" asp-for="BookLanguage" disabled />
                    <span asp-validation-for="BookLanguage" class="text-danger"></span>
                </div>

                <div class="form-group form-row">
                    <label asp-for="AuthorId"></label>
                    <select asp-for="AuthorId" asp-items="ViewBag.TypeDropDown" class="form-control" disabled>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger w-75" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a class="nav-link text-white w-75 btn btn-success" asp-area="" asp-controller="Book" asp-action="Index">Back</a>
                    </div>
                </div>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}