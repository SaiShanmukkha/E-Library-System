@model LibrarySystem.Models.Book


<h1>Enter Book Details:</h1>

<div class="container center_div">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Update" autocomplete="off">
                <input asp-for="BookId" hidden />
                <div class="form-group form-row">
                    <label asp-for="isAvailable"></label>
                    <select asp-for="isAvailable" class="form-control">
                        @if (Model.isAvailable)
                        {
                            <option selected>true</option>
                            <option>false</option>

                        }
                        else
                        {
                            <option>true</option>
                            <option selected>false</option>
                        }
                    </select>
                    <span asp-validation-for="isAvailable" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookName"></label>
                    <input type="text" class="form-control" asp-for="BookName" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookEdition"></label>
                    <input type="number" class="form-control" asp-for="BookEdition" min="1" />
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookYear"></label>
                    <input type="number" class="form-control" asp-for="BookYear" />
                    <span asp-validation-for="BookYear" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookPublisher"></label>
                    <input type="text" class="form-control" asp-for="BookPublisher" />
                    <span asp-validation-for="BookPublisher" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="BookLanguage"></label>
                    <input type="text" class="form-control" asp-for="BookLanguage" />
                    <span asp-validation-for="BookLanguage" class="text-danger"></span>
                </div>

                <div class="form-group form-row">
                    <label asp-for="AuthorId"></label>
                    <select asp-for="AuthorId" asp-items="@ViewBag.TypeDropDown" class="form-control">
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col-6">
                        <a class="nav-link text-white w-75 btn btn-danger" asp-area="" asp-controller="Book" asp-action="Index">Back</a>
                    </div>
                </div>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}