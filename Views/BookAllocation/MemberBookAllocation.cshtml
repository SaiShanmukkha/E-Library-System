@using LibrarySystem.Models.DataVM
@{
    ViewData["Title"] = "Member Book Allocation";
}


<div id="container"></div>
<div>
    <div class="container">
        <div class="row">
            <h2 class="text-info col-7">Member Book Allocation Data:</h2>
            <div class="col-2">
                <button type="button" class="icon-button" onclick="GetNotify();">
                    <span class="material-icons">notifications_none</span>
                    <span class="icon-button__badge" id="NotificationCount"></span>
                </button>
            </div>
        </div>
            <div class="row">
                <input id="memberid" value="@ViewBag.MemberData.MemberId" hidden />
                <label class="font-weight-bolder text-primary">Member Name:&emsp;</label>
                <label>@ViewBag.MemberData.MemberName</label>
            </div>
            <div class="row">
                <label class="font-weight-bolder text-primary">Member Email:&emsp;</label>
                <label>@ViewBag.MemberData.Email</label>
            </div>
            <div class="row">
                <div class="mx-1 col-3">
                    <button id="getBookAllocationHistory" class="btn btn-success text-center" onclick="bookAllocationHistory();">Show History</button>
                </div>
                <div class="offfset-2 mx-1 col-3">
                    <button class="btn btn-info" asp-controller="Member" asp-action="Index" onclick="GoBack();">Back</button>
                </div>
            </div>
        </div>
        <hr />
    </div>



<div id="here_table">
    
     

</div>



