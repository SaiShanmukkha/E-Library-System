
@model LibrarySystem.Models.Member

@{
    ViewData["Title"] = "Delete Member";
}

<h1 class="text-info">Enter User Details:</h1>

<div class="container center_div">
    <div class="row">
        <div class="col-md-6">
            <form id="MemberDeleteForm" method="post" asp-action="DeletePost" autocomplete="off">
                <input asp-for="MemberId" hidden />
                <div class="form-group form-row">
                    <label asp-for="MemberName"></label>
                    <input type="text" class="form-control" asp-for="MemberName" readonly />
                    <span asp-validation-for="MemberName" class="text-danger"></span>
                </div>
                <div class="form-group form-row">
                    <label asp-for="MemberGender"></label>
                    <select type="text" class="form-control" asp-for="MemberGender" readonly>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="form-group form-row">
                    <label asp-for="MemberDOB"></label>
                    <input type="date" class="form-control" asp-for="MemberDOB" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="PhoneNumber"></label>
                    <input type="number" class="form-control" asp-for="PhoneNumber" maxlength="10" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="Email"></label>
                    <input type="text" class="form-control" asp-for="Email" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="Profession"></label>
                    <input type="text" class="form-control" asp-for="Profession" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="StreetAddress"></label>
                    <input class="form-control" asp-for="StreetAddress" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="City"></label>
                    <input type="text" class="form-control" asp-for="City" readonly />
                </div>
                <div class="form-group form-row">
                    <label asp-for="Country"></label>
                    <input type="text" class="form-control" asp-for="Country" readonly />
                </div>
                <div class="form-group form-row" id="OtherCountryBlock" style="display: none;">
                    <label asp-for="OtherCountry"></label>
                    <input type="text" class="form-control" asp-for="OtherCountry" readonly/>
                </div>

                @*<div asp-validation-summary="All" class="text-danger"></div>*@
            </form>
            <div class="form-group form-row">
                <div class="col-6">
                    <button class="btn btn-danger w-75 deleteConfirmation">Delete</button>
                </div>
                <div class="col-6">
                    <a class="nav-link text-white w-75 btn btn-success" asp-area="" asp-controller="Member" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/MemberJs/member.js"></script>
    <script type="text/javascript">
        if ($("#Country").val() == "Other") {
            $("#OtherCountryBlock").show();
        }
    </script>
}
