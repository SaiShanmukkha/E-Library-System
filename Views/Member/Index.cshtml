@model IEnumerable<LibrarySystem.Models.Member>

@{
    ViewData["Title"] = "Members";
}


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-info">Members</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">Add New Member</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-secondary table-responsive-xl table-striped small-font">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Profession
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        DOB
                    </th>
                    <th>
                        Street Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Country
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.MemberName</td>
                        <td>@member.Profession</td>
                        <td >@member.Email</td>
                        <td>@member.PhoneNumber</td>
                        <td >@member.MemberGender</td>
                        <td >@member.MemberDOB</td>
                        <td >@member.StreetAddress</td>
                        <td>@member.City</td>
                        <td >@member.Country</td>
                        <td>
                            <p style="display:none" id="memberid">@member.MemberId</p>
                            <div class="text-center btn-group w-100">
                                <a class="btn btn-info mx-1 text-white small-font" asp-controller="BookAllocation" asp-action="MemberBookAllocationData" asp-route-Id="@member.MemberId">Book Allocation Details</a>
                                <a class="btn btn-primary mx-1 text-white small-font" asp-controller="Member" asp-action="Update" asp-route-Id="@member.MemberId">Update</a>
                                <a class="btn btn-danger mx-1 text-white small-font" asp-controller="Member" asp-action="Delete" asp-route-Id="@member.MemberId">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No Members</p>
    }
</div>
@section Scripts{ 
<script src="~/js/MemberJs/member.js"></script>
}
