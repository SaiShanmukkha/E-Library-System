@{
    ViewData["Title"] = "Member Type";
}


<div>
    <div class="row">
        <h2 class="col-lg-4 text-info">Member Types</h2>
    </div>
    <div class="row">
        <button class="btn btn-primary mx-3 col-auto" type="button" data-toggle="modal" data-target="#createModalCenter">
            Add
        </button>
    </div>
</div>
<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5" id="memberTypeTable">

        </div>
    </div>
</div>




<!-- Create Modal for MemberType -->

<div class="modal fade" id="createModalCenter" tabindex="-1" role="dialog" aria-labelledby="createModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLongTitle">Add Member Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row p-1">
                    <label class="text-dark">Enter Member Type:&emsp;</label>
                    <input type="text" class="col-6" id="createMemberTypeField" autocomplete="off" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="createCall();">Create</button>
            </div>
        </div>
    </div>
</div>


<!-- Update Modal for MemberType -->

<div class="modal fade" id="updateModalCenter" tabindex="-1" role="dialog" aria-labelledby="updateModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLongTitle">Update Member Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row p-1">
                    <input type="number" id="updateMemberTypeIdField" hidden />
                    <label class="text-dark">Enter Member Type:&emsp;</label>
                    <input type="text" class="col-6" id="updateMemberTypeField" autocomplete="off" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info" onclick="updateCall();">Update</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/MemberTypeJS/memberType.js"></script>
}